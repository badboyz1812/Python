class Circle():  
    def __init__(self, radius):
        self.radius = radius

    def Area(self):
        return 3.16 *(self.radius**2)
     
    def Circumference(self):
        return 2* 3.16 *self.radius

r  = int(input("Enter the radius of the circle: "))   
circle = Circle(r)
print("The Area of the circle: ",circle.Area())
print("The circumference of the circle: ",circle.Circumference())
